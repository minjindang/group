<div class="col-md-12">
  
  <h2 class="text-center"> 我發表過的文章 </h2>
  
  <table class="table">
    <thead>
      <tr>
        <th> Content </th>
        <th> Group Name </th>
        <th> Last Update </th>
      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= render_post_content(post) %> </td>
          <td> <%= post.group.title %> </td>
          <td> <%= post.updated_at.to_s(:long) %> </td> 
          <!--<td> <%= post.updated_at.to_s(:short) %> </td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>